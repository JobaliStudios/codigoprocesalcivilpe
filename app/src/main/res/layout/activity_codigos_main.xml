<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <FrameLayout
      android:id="@+id/adContainer2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <!-- ScrollView para el contenido desplazable -->
  <ScrollView
      android:id="@+id/scrollViewContent"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/adContainer2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card_codigo_civil"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:layout_marginBottom="16dp"
          android:clickable="true"
          android:foreground="?selectableItemBackground"
          app:cardBackgroundColor="@color/card_background"
          app:cardCornerRadius="16dp"
          app:cardElevation="4dp"
          app:strokeColor="#336B081D"
          app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_card"
            android:orientation="horizontal"
            android:padding="16dp">

          <!-- Contenedor de texto -->
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

            <!-- Título -->
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código Civil"
                android:textColor="@color/primary_dark"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Subtítulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/nodisponible"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"/>

          </LinearLayout>

          <!-- Flecha -->
          <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_gravity="center_vertical"
              android:src="@drawable/baseline_chevron_right_24"
              android:contentDescription="@string/next_section"
              app:tint="@color/primary_dark"/>

        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card_codigo_penal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:layout_marginBottom="16dp"
          android:clickable="true"
          android:foreground="?selectableItemBackground"
          app:cardBackgroundColor="@color/card_background"
          app:cardCornerRadius="16dp"
          app:cardElevation="4dp"
          app:strokeColor="#336B081D"
          app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_gradient_card"
            android:padding="16dp">

          <!-- Contenedor de texto -->
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código Penal"
                android:textColor="@color/primary_dark"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Subtítulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/nodisponible"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"/>

          </LinearLayout>

          <!-- Flecha -->
          <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_gravity="center_vertical"
              android:src="@drawable/baseline_chevron_right_24"
              android:contentDescription="@string/next_section"
              app:tint="@color/primary_dark"/>

        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card_codigo_procesal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:layout_marginBottom="16dp"
          android:clickable="true"
          android:foreground="?selectableItemBackground"
          app:cardBackgroundColor="@color/card_background"
          app:cardCornerRadius="16dp"
          app:cardElevation="4dp"
          app:strokeColor="#336B081D"
          app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_card"
            android:orientation="horizontal"
            android:padding="16dp">

          <!-- Contenedor de texto -->
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código Procesal Civil (FEB 2025)"
                android:textColor="@color/primary_dark"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Subtítulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="847 Articulos"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"/>

          </LinearLayout>

          <!-- Flecha -->
          <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_gravity="center_vertical"
              android:src="@drawable/baseline_chevron_right_24"
              android:contentDescription="@string/next_section"
              app:tint="@color/primary_dark"/>

        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card_codigo_procesal_penal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:layout_marginBottom="16dp"
          android:clickable="true"
          android:foreground="?selectableItemBackground"
          app:cardBackgroundColor="@color/card_background"
          app:cardCornerRadius="16dp"
          app:cardElevation="4dp"
          app:strokeColor="#336B081D"
          app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_gradient_card"
            android:padding="16dp">

          <!-- Contenedor de texto -->
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código Procesal Penal"
                android:textColor="@color/primary_dark"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Subtítulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/nodisponible"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"/>

          </LinearLayout>

          <!-- Flecha -->
          <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_gravity="center_vertical"
              android:src="@drawable/baseline_chevron_right_24"
              android:contentDescription="@string/next_section"
              app:tint="@color/primary_dark"/>

        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
