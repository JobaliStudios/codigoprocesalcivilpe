<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/adContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ScrollView para el contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adContainer2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_codigo_civil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/quizz_vector" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp">

                        <TextView
                            style="@style/TEXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Código Civil"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/NoDisponibilidaddecodigos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nodisponible" />
                    </LinearLayout>
                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/next_section"
                        android:src="@drawable/baseline_chevron_right_24" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_codigo_penal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/quizz_vector" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp">

                        <TextView
                            style="@style/TEXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Código Penal"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/NoDisponibilidaddecodigos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nodisponible" />
                    </LinearLayout>
                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/next_section"
                        android:src="@drawable/baseline_chevron_right_24" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Código Procesal Civil -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_codigo_procesal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/quizz_vector" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp">

                        <TextView
                            style="@style/TEXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Código Procesal Civil"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/Disponibilidaddecodigos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/disponible" />
                    </LinearLayout>
                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/next_section"
                        android:src="@drawable/baseline_chevron_right_24" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Código Procesal Civil -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_codigo_procesal_penal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/quizz_vector" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp">

                        <TextView
                            style="@style/TEXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Código Procesal Penal"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/NoDisponibilidaddecodigos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nodisponible" />
                    </LinearLayout>
                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/next_section"
                        android:src="@drawable/baseline_chevron_right_24" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
