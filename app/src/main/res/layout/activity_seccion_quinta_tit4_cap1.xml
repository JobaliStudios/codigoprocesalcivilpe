<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeccionQuinta.SeccionQuintaTit4Cap1">

    <!-- CardView fijo en la parte superior -->
    <androidx.cardview.widget.CardView
        android:id="@+id/fixedCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Contenido del CardView fijo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                style="@style/TEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/capitulo1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Subtítulo -->
            <TextView
                style="@style/TEXT2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sec5tit4cap1sub"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ScrollView para el contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollViewContent"
android:layout_width="match_parent"

        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fixedCardView"
        app:layout_constraintBottom_toTopOf="@+id/adContainer21"

>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tu primer CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/section1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/seccion_segundaimg"
                        android:src="@drawable/baseline_gavel_24" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp">

                        <TextView
                            style="@style/TEXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/subcapitulo1"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TEXT2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="@string/sec5tit4cap1subcap1sub"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/TEXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rangartisec5tit4cap1subcap1"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/next_section"
                        android:src="@drawable/baseline_chevron_right_24" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tu segundo CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/section2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <!-- Contenido del segundo CardView -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/seccion_primeraimg"
                        android:src="@drawable/baseline_gavel_24" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp">

                        <TextView
                            style="@style/TEXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/subcapitulo2"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TEXT2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:text="@string/sec5tit4cap1subcap2sub"
                            android:textSize="13sp" />

                        <TextView
                            style="@style/TEXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rangartisec5tit4cap1subcap2"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        style="@style/IMAGE"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/next_section"
                        android:src="@drawable/baseline_chevron_right_24" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/adContainer21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>