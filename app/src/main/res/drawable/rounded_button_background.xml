<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color de fondo del botón -->
    <solid android:color="#000000" /> <!-- Fondo blanco, puedes cambiarlo a gris (#CCCCCC) o cualquier otro color -->

    <!-- Bordes redondeados (esquinas circulares) -->
    <corners android:radius="8dp" /> <!-- Radio de las esquinas redondeadas (ajusta este valor para más o menos redondez) -->

    <!-- Borde del botón -->
    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- Color del borde (gris claro) -->
</shape>